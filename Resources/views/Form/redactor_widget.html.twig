{% form_theme form _self %}

{% block redactor_widget %}
    {% spaceless %}
        <textarea {{ block('widget_attributes') }}>{{ value }}</textarea>
        <script type="text/javascript">
            if (undefined === window.tp_redactor) {
                window.tp_redactor = {};
            }
            window.tp_redactor['{{ id }}'] = {{ parameters | json_encode | raw }};
        </script>
    {% endspaceless %}
{% endblock %}
